generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  STUDENT
  ADMIN
  TEACHER
  ASSISTANT
  EMPLOYEE
}

enum DayOfWeek {
  SAT
  SUN
  MON
  TUE
  WED
  THU
  FRI
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

enum QuizType {
  CHAPTER
  FINAL
}

enum QuizStatus {
  IN_PROGRESS
  SUBMITTED
  TIMED_OUT
}
enum AssignmentSubmissionStatus {
  SUBMITTED
  LATE
  REVIEWED
}


model Chapter {
  id              Int               @id @default(autoincrement())
  title           String
  content         String? // شرح نصي (اختياري)
  videoPath       String // مسار الفيديو
  pdfPath         String? // مسار الـ PDF
  order           Int
  courseId        Int
  course          Course            @relation("ChapterToCourse", fields: [courseId], references: [id], onDelete: Cascade, map: "fk_chapter_course")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  chapterProgress ChapterProgress[] @relation("ChapterToChapterProgress")
  Quiz            Quiz[]
  assignments Assignment[]
  @@unique([courseId, order], name: "unique_chapter_course_order", map: "idx_chapter_course_order")
  @@index([courseId], map: "idx_chapter_course_id")
  @@map("chapter")
}

model Course {
  id            Int                 @id @default(autoincrement())
  title         String
  description   String?
  teacherId     Int
  image_path    String?
  teacher       User                @relation("TeacherToCourse", fields: [teacherId], references: [id], map: "fk_course_teacher")
  enrollments   Enrollment[]        @relation("CourseToEnrollment")
  requests      EnrollmentRequest[] @relation("CourseToEnrollmentRequest")
  chapters      Chapter[]           @relation("ChapterToCourse")
  schedules     CourseSchedule[]    @relation("CourseToCourseSchedule")
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  CourseSession CourseSession[]
  Quiz          Quiz[]

  @@index([teacherId], map: "idx_course_teacher_id")
  @@map("course")
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique(map: "unique_user_email")
  first_name        String?
  last_name         String?
  image_path        String?
  age               Int?
  password          String
  phone             String?
  address           String?
  role              Role                @default(USER)
  enrollments       Enrollment[]        @relation("UserToEnrollment")
  teachingCourses   Course[]            @relation("TeacherToCourse")
  enrollmentRequest EnrollmentRequest[] @relation("UserToEnrollmentRequest")
  chapterProgress   ChapterProgress[]   @relation("UserToChapterProgress")
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  Attendance        Attendance[]
  QuizAttempt       QuizAttempt[]
  Quiz              Quiz[]
  assignmentSubmissions AssignmentSubmission[]
  assignmentsCreated    Assignment[]
  @@index([email], map: "idx_user_email")
  @@map("user")
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  studentId Int
  courseId  Int
  createdAt DateTime @default(now())

  user   User   @relation("UserToEnrollment", fields: [studentId], references: [id], map: "fk_enrollment_user")
  course Course @relation("CourseToEnrollment", fields: [courseId], references: [id], map: "fk_enrollment_course")

  @@unique([studentId, courseId], name: "unique_enrollment_student_course", map: "idx_enrollment_student_course")
  @@index([studentId], map: "idx_enrollment_student_id")
  @@index([courseId], map: "idx_enrollment_course_id")
  @@map("enrollment")
}

model EnrollmentRequest {
  id        Int      @id @default(autoincrement())
  studentId Int
  courseId  Int
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())

  student User   @relation("UserToEnrollmentRequest", fields: [studentId], references: [id], map: "fk_enrollment_request_user")
  course  Course @relation("CourseToEnrollmentRequest", fields: [courseId], references: [id], map: "fk_enrollment_request_course")

  @@unique([studentId, courseId], name: "unique_enrollment_request_student_course", map: "idx_enrollment_request_student_course")
  @@index([studentId], map: "idx_enrollment_request_student_id")
  @@index([courseId], map: "idx_enrollment_request_course_id")
  @@index([status], map: "idx_enrollment_request_status")
  @@map("enrollmentrequest")
}

model ChapterProgress {
  id        Int      @id @default(autoincrement())
  studentId Int
  chapterId Int
  progress  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student User    @relation("UserToChapterProgress", fields: [studentId], references: [id], map: "fk_chapter_progress_user")
  chapter Chapter @relation("ChapterToChapterProgress", fields: [chapterId], references: [id], map: "fk_chapter_progress_chapter")

  @@unique([studentId, chapterId], name: "unique_chapter_progress_student_chapter", map: "idx_chapter_progress_student_chapter")
  @@index([studentId], map: "idx_chapter_progress_student_id")
  @@index([chapterId], map: "idx_chapter_progress_chapter_id")
  @@map("chapterprogress")
}

model CourseSchedule {
  id        Int       @id @default(autoincrement())
  courseId  Int
  day       DayOfWeek
  startTime String // "10:00"
  endTime   String // "12:00"
  room      String? // optional (قاعة 1 – Lab A)

  course Course @relation("CourseToCourseSchedule", fields: [courseId], references: [id], map: "fk_course_schedule_course")

  @@unique([day, startTime, room], name: "unique_course_schedule_day_time_room", map: "idx_course_schedule_day_time_room")
  @@index([courseId], map: "idx_course_schedule_course_id")
  @@index([day], map: "idx_course_schedule_day")
  @@map("courseschedule")
}

model CourseSession {
  id        Int      @id @default(autoincrement())
  courseId  Int
  date      DateTime // تاريخ الحصة (2026-01-01)
  startTime String // "10:00"
  endTime   String // "12:00"
  room      String?

  course     Course       @relation(fields: [courseId], references: [id])
  attendance Attendance[]

  createdAt DateTime @default(now())

  @@index([courseId])
  @@map("course_sessions")
}

model Attendance {
  id        Int              @id @default(autoincrement())
  sessionId Int
  studentId Int
  status    AttendanceStatus @default(PRESENT)

  session CourseSession @relation(fields: [sessionId], references: [id])
  student User          @relation(fields: [studentId], references: [id])

  createdAt DateTime @default(now())

  @@unique([sessionId, studentId])
  @@index([studentId])
  @@index([sessionId])
  @@map("attendance")
}

model Quiz {
  id          Int     @id @default(autoincrement())
  title       String
  description String?

  type      QuizType
  courseId  Int?
  chapterId Int?

  startTime   DateTime
  endTime     DateTime
  durationMin Int
  totalMarks  Int
  keepAnswers Boolean  @default(false)
  isPublished Boolean  @default(false)

  createdBy Int
  teacher   User @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course    Course?        @relation(fields: [courseId], references: [id])
  chapter   Chapter?       @relation(fields: [chapterId], references: [id])
  questions QuizQuestion[]
  attempts  QuizAttempt[]

  @@index([courseId], map: "Quiz_courseId_idx")
  @@index([chapterId], map: "Quiz_chapterId_idx")
  @@index([createdBy], map: "Quiz_createdBy_fkey")
  @@map("quiz")
}

model QuizQuestion {
  id     Int @id @default(autoincrement())
  quizId Int

  question String
  marks    Int    @default(1)

  createdAt DateTime @default(now())

  quiz              Quiz                @relation(fields: [quizId], references: [id])
  options           QuizOption[]
  QuizAttemptAnswer QuizAttemptAnswer[]

  @@index([quizId], map: "QuizQuestion_quizId_idx")
  @@map("quizquestion")
}

model QuizOption {
  id         Int @id @default(autoincrement())
  questionId Int

  text      String
  isCorrect Boolean @default(false)

  question          QuizQuestion        @relation(fields: [questionId], references: [id])
  QuizAttemptAnswer QuizAttemptAnswer[]

  @@index([questionId], map: "QuizOption_questionId_idx")
  @@map("quizoption")
}

model QuizAttempt {
  id        Int @id @default(autoincrement())
  quizId    Int
  studentId Int

  score  Int        @default(0)
  status QuizStatus // IN_PROGRESS | SUBMITTED | TIMED_OUT

  startedAt   DateTime  @default(now())
  submittedAt DateTime?

  quiz    Quiz @relation(fields: [quizId], references: [id])
  student User @relation(fields: [studentId], references: [id])

  answers QuizAttemptAnswer[]

  @@unique([quizId, studentId], map: "QuizAttempt_quizId_studentId_key")
  @@index([studentId], map: "QuizAttempt_studentId_idx")
  @@map("quizattempt")
}

model QuizAttemptAnswer {
  id         Int @id @default(autoincrement())
  attemptId  Int
  questionId Int
  optionId   Int

  isCorrect Boolean

  attempt  QuizAttempt  @relation(fields: [attemptId], references: [id])
  question QuizQuestion @relation(fields: [questionId], references: [id])
  option   QuizOption   @relation(fields: [optionId], references: [id])

  @@unique([attemptId, questionId], map: "QuizAttemptAnswer_attemptId_questionId_key")
  @@index([attemptId], map: "QuizAttemptAnswer_attemptId_idx")
  @@index([questionId], map: "QuizAttemptAnswer_questionId_fkey")
  @@index([optionId], map: "QuizAttemptAnswer_optionId_fkey")
  @@map("quizattemptanswer")
}
model Assignment {
  id          Int      @id @default(autoincrement())
  chapterId   Int
  title       String
  description String?
  dueDate     DateTime
  maxGrade    Int
  allowLate   Boolean  @default(true)

  createdBy  Int
  teacher    User     @relation(fields: [createdBy], references: [id])

  chapter    Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  submissions AssignmentSubmission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chapterId])
  @@index([createdBy])
  @@map("assignment")
}

model AssignmentSubmission {
  id           Int      @id @default(autoincrement())
  assignmentId Int
  studentId    Int

  filePath     String
  submittedAt  DateTime @default(now())
  status       AssignmentSubmissionStatus

  grade    Int?
  feedback String?

  assignment Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student    User       @relation(fields: [studentId], references: [id])

  @@unique([assignmentId, studentId], name: "unique_assignment_student")
  @@index([studentId])
  @@index([assignmentId])
  @@map("assignmentsubmission")
}
